
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Login</title>
</head>
@*style="background-color:lightgray"*@
<body>
    <div>
        <div style="width:500px;height:500px;border:1px solid #ff6a00;position:absolute;top:0px;right:0px;bottom:0px;left:0px;margin:auto">
            <div class="content">
                <div class="roow" style="padding:5px">
                    <div class="col col-sm-12">
                        <h3 style="text-align:center;font-family:Calibri">Sign in to your account</h3>
                        <hr />
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-2"></div>
                    <div class="col col-sm-8">User Name*</div>
                    <div class="col col-sm-2"></div>
                </div>
                <div class="row">
                    <div class="col col-sm-2"></div>
                    <div class="col col-sm-8">
                        <input type="text" style="width:100%;max-width:100% !important" />
                    </div>
                    <div class="col col-sm-2"></div>
                </div>
                <div class="row">
                    <div class="col col-sm-2"></div>
                    <div class="col col-sm-8">Password*</div>
                    <div class="col col-sm-2"></div>
                </div>
                <div class="row">
                    <div class="col col-sm-2"></div>
                    <div class="col col-sm-8"> <input type="password" style="width:100%;max-width: 100% !important" /></div>
                    <div class="col col-sm-2"></div>
                </div>
                <div class="row" style="padding:10px 0px">
                    <div class="col col-sm-4"></div>
                    <div class="col col-sm-4"> <input type="button" value="login" style="width:100%"/></div>
                    <div class="col col-sm-4"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
